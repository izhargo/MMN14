#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include "SharedHeaderFile.h"
#include "FirstTransitionHeader.h"

extern int flagLabel;

void fileTransition(FILE *fd){}

char *isLabel(char *word){
	int i = 1;	
	if (isalpha(word[0]) == 0){
        flagLabel = 0;
		return NULL;
	} else{
		while (word[i]){
			if (isalnum(word[i]) == 0){
				flagLabel = 0;
				return NULL;			
			} else {
				i++;
			}
		}
		flagLabel = 1;		
		return word;
	}
}

void analizeLine(char *line){
    char *word1;
    char *checker;
    char *restOfLine;
    char *label;
    checker = strchr(line,':');
	if (checker != NULL){ /* ":" appears in line*/
        word1 = strtok(line, ":");
        label = isLabel(word1);
        restOfLine = strtok(NULL,":");
	} else{ /* ":" doesn't appear in line"*/
        restOfLine = line;
	}    
}

